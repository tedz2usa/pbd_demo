<div class='mainContentBox registerAccountBox accountSettingsBox'>
  <h1>Create New Listing Subscription</h1>
  <%= error_messages_for(@listingOwnership) %>
  <%= form_for(:listingOwnership, :url => {:action => 'create', :controller => 'listing_ownership'}) do |f| %>
    <table class='updateFormTable'>
      <colgroup>
        <col class='uftAttribute' />
        <col class='uftValue' />
      </colgroup>
      <tr>
        <td>Reddit Subreddit</td>
        <td><%= f.select(:listing_base_url, @subreddits.map {|subreddit| [subreddit.title_description, subreddit.base_url]}) %></td>
      </tr>
      <tr>
        <td>Display Per Page</td>
        <td><%= f.select(:display_per_page, 1..50) %></td>
      </tr>
      <tr>
        <td>View Aspect</td>
        <td><%= f.select(:view_aspect, ['hot', 'new', 'rising', 'top']) %></td>
      </tr>
      <tr>
        <td>&nbsp;</td>
        <td><%= submit_tag('Add') %> <span style='font-size:12px;'>or <%= link_to 'Cancel', {:action => 'default', :controller => 'feed'} %>.</span></td>
      </tr>
    </table>
  <% end %>

</div>  